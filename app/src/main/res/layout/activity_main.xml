<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Choisir le nombre d'années:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rad5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_5_ans"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/rad10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_10_ans" />

        <RadioButton
            android:id="@+id/rad15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_15_ans" />

        <RadioButton
            android:id="@+id/rad25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_25_ans" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Saisir le taux d'intérêt mensuel en %:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtTaux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saisir le montant emprunté:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtEmprunt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

</LinearLayout>